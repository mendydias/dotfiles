export PATH=$HOME/bin:$HOME/.local/bin:$HOME/.local/scripts:/usr/local/bin:$HOME/.config/emacs/bin:$GOPATH:$PATH

export EDITOR=nvim

# Group directories first, show icons, and enable file size color scale
alias ez='eza --group-directories-first --icons --color-scale --grid'
alias ezt='eza --tree --level=2 --icons' # Show in tree view

eval "$(zoxide init zsh)"

alias vim="nvim "

if [ -f $HOME/.sdkman/bin/sdkman-init.sh ]; then
	source $HOME/.sdkman/bin/sdkman-init.sh
fi

# Fix ligatures
export LANGUAGE=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LC_TYPE=en_US.UTF-8
export TERM=xterm-256color
export PAGER=bat

source $HOME/.antidote/antidote.zsh
antidote load $HOME/.zsh_plugins.txt

eval "$(starship init zsh)"
starship preset nerd-font-symbols -o ~/.config/starship.toml

# Yazi configuration
function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(command cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		builtin cd -- "$cwd"
	fi
	rm -f -- "$tmp"
}

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Work around to use podman with test containers
export DOCKER_HOST=unix://${XDG_RUNTIME_DIR}/podman/podman.sock

# hydectl source
source ~/.config/hypr/zsh-autocomplete.sh
